@model List<Trips>

@{
    ViewData["Title"] = "My Trip Log";

    
}

<div class="mb-2">
    <a asp-controller="Home" asp-action="Destination">Add Trip</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate</td>
                <td>@trip.EndDate</td>
                <td>@trip.Accommodation</td>
                <td>@trip.ThingToDo1</td>
            </tr>
        }
    </tbody>
</table>